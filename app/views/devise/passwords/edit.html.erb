<div class="row">
  
  <div class="col-md-6 col-md-offset-3 text-center">
    
    <h2>Change Your Password</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render 'shared/devisemessage' %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <%= f.password_field :password, autofocus: true, class: "form-control", placeholder: "New Password" %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, autofocus: true, class: "form-control", placeholder: "Confirm New Password" %>
      </div>      

      <div class="actions">
        <%= f.submit "Change My Password", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>

</div>


